#!/usr/bin/env bash
echo '=========    SHOW HOME DIR'
ls -l ~
echo '=========    CREATE first_dir DIR and nested files'
mkdir ~/first_dir
echo "Some text here." > ~/first_dir/myfile
echo "Some another text here." > ~/first_dir/my_second_file
echo '=========    CREATE second_dir DIR and nested files'
mkdir ~/second_dir
echo "Some text here." > ~/second_dir/my_file
echo "Some another text here." > ~/second_dir/my_second_file
echo '=========    CREATE third_dir DIR and nested files'
mkdir ~/third_dir
echo "Some text here." > ~/third_dir/my_file
echo '=========    CREATE files in home'
echo "Some text here." > ~/first_file
echo "Some another text here." > ~/second_file
echo '=========    SHOW HOME DIR again'
ls -l ~/
echo '=========    SHOW HOME first_dir DIR'
ls -l ~/first_dir
echo '=========    SHOW HOME second_dir DIR'
ls -l ~/second_dir
echo '=========    SHOW HOME third_dir DIR'
ls -l ~/third_dir
